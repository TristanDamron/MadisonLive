<% content_for :navigation_title do %>
    New Message
<% end %>

<%= form_for @message do |f| %>
    <%= f.hidden_field :to_user_id %>

    <div style="margin-bottom: 15px;">
      <%= image_tag @to_user.avatar.url(:thumb), :style => 'width: 32px; height: 32px; margin-right: 6px;' %><%= @to_user.full_name %>
    </div>

    <div class="form-group">
      <%= f.text_area :text, :class => 'form-control direct-message-text' %>
    </div>

    <div class="row">
      <div class="col-xs-12" style="text-align: left;">
        <%= f.submit 'Send', :class => 'btn btn-primary small col-sm-2 col-xs-12' %>
      </div>
    </div>
<% end %>