<% content_for :navigation_title do %>
    Edit Profile
<% end %>

<%= form_for @user, :url => profile_path do |f| %>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label>First Name</label>
          <%= f.text_field :first_name, :class => 'form-control direct-message-text' %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label>Last Name</label>
          <%= f.text_field :last_name, :class => 'form-control direct-message-text' %>
        </div>
      </div>
    </div>

    <div class="row" style="margin-bottom: 15px;">
      <div class="col-md-4">
        <%= image_tag @user.avatar.url(:thumb) %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.file_field :avatar, :class => 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12" style="text-align: left;">
        <%= f.submit 'Save', :class => 'btn btn-primary small col-sm-2 col-xs-12' %>
      </div>
    </div>
<% end %>